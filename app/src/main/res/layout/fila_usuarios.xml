<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextView
            android:text="Usuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/usuarioTxt"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/editarBtn" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
            android:id="@+id/editarBtn" app:layout_constraintEnd_toStartOf="@+id/borrarBtn"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
            android:id="@+id/borrarBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
    />
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintTop_toBottomOf="@+id/editarBtn"
            android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>