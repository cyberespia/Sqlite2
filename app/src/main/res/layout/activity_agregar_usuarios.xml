<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AgregarUsuarios">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usuarioEdit" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Usuario" android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/agregarUsuarioBtn"
            tools:layout_editor_absoluteX="102dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nivelEdit"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEdit"
            android:hint="Password" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/usuarioEdit"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Cerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cerraBt"
            app:layout_constraintStart_toEndOf="@+id/agregarUsuarioBtn" android:layout_marginStart="28dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nivelEdit"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/nivelEdit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:hint="Nivel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordEdit"/>
</android.support.constraint.ConstraintLayout>